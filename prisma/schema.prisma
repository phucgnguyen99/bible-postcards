generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Postcard {
  id               String   @id @default(uuid())
  reference        String
  text             String
  tags             String[] @default([])
  commentary       String?
  personalThoughts String?
  questions        String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([reference])
}
